{
  "name": "venom",
  "version": "0.0.1",
  "description": "A bot for the Creation Asylum Discord",
  "main": "index.js",
  "repository": "https://github.com/jondeaves/venom",
  "bugs": "https://github.com/jondeaves/venom/issues",
  "author": "Jon Deaves <hello@jondeaves.me> https://jondeaves.me",
  "contributors": [
    "Jon Deaves <hello@jondeaves.me> https://jondeaves.me"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "nodemon",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "dependencies": {
    "discord.js": "~12.2.0",
    "dotenv": "~8.2.0",
    "inversify": "~5.0.1",
    "mongodb": "~3.6.0",
    "reflect-metadata": "~0.1.13",
    "winston": "~3.3.3"
  },
  "devDependencies": {
    "@types/dotenv": "~8.2.0",
    "@types/mongodb": "~3.5.25",
    "@types/node": "~14.0.27",
    "@types/winston": "~2.4.4",
    "chalk": "^4.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "~2.0.4",
    "prettier": "~2.0.5",
    "standard-version": "^8.0.2",
    "ts-node": "~8.10.2",
    "tsconfig-paths": "~3.9.0",
    "tslint": "~6.1.3",
    "tslint-config-prettier": "~1.18.0",
    "tslint-react": "~5.0.0",
    "typescript": "~3.9.7"
  },
  "git": {
    "scripts": {
      "commit-msg": "./scripts/commit-msg $1",
      "pre-commit": "./node_modules/.bin/lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "./node_modules/.bin/prettier \"**/*.ts\" --ignore-path ./.prettierignore --write",
      "./node_modules/.bin/tslint -p tsconfig.json -c tslint.json",
      "git add"
    ]
  },
  "engines": {
    "node": ">=10 <=14",
    "yarn": ">=1.10.0"
  }
}